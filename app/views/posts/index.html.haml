%h1 Listing posts

%table{id: "post_table"}
  %thead
    %tr
      %th Message
      %th User
      %th
      %th
      %th

  %tbody
    - @posts.each do |post|
      %tr
        %td= post.message
        %td= post.user
        %td= link_to 'Show', post
        %td= link_to 'Edit', edit_post_path(post)
        %td= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Post', new_post_path

:javascript
  $('#post_table').DataTable();