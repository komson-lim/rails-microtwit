.container
    %h1{class: "fs-1 fw-bold text-center"}=@user.name


.row
    .col-lg-4.col-md-3.col-sm-2
    .col-lg-4.col-md-6.col-sm-8
        = render "display", posts: @posts, user: @user
    .col-lg-4.col-md-3.col-sm-2.mt-2
        = link_to "new post", new_post_path, class: "btn btn-outline-primary "
