.container
    %h1{class: "fs-1 fw-bold text-center"}=@user.name


.row
    .col-lg-4.col-md-3.col-sm-2
    .col-lg-4.col-md-6.col-sm-8
        - @posts.each do |post|
            .container.justify-content-center.border.rounded.my-2.pt-4
                = link_to post.name,"/profile/#{post.name}" ,class: "fs-3 fw-bold"
                %p{class: "fs-4 text-break my-4", style: "line-height: 25px"}= post.message
                %p{class: "text-end"}= post.created_at
    .col-lg-4.col-md-3.col-sm-2.mt-2
        = link_to "new post", new_post_path, class: "btn btn-outline-primary "
         